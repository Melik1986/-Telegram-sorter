# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AI Configuration
# Groq API (рекомендуется - быстрее и надежнее)
# Получите API ключ на https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Ollama Configuration (локальная AI модель, резервный вариант)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Web Interface Configuration (опционально)
# Секретный ключ для Flask сессий
FLASK_SECRET_KEY=your_secret_key_here

# Порт для веб-интерфейса (по умолчанию 5000)
WEB_INTERFACE_PORT=5000

# Rate Limiting Configuration (опционально)
# Максимальное количество запросов в минуту
RATE_LIMIT_PER_MINUTE=30

# Backup Configuration (опционально)
# Интервал автоматического резервного копирования в часах
AUTO_BACKUP_INTERVAL=24

# Cache Configuration (опционально)
# Время жизни кэша в секундах
CACHE_TTL=3600

# File Upload Configuration (опционально)
# Максимальный размер файла в МБ
MAX_FILE_SIZE_MB=10

# Logging Configuration (опционально)
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# GitHub Integration Configuration (опционально)
# Получите токен на https://github.com/settings/tokens
# Необходимые права: repo, contents
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username
GITHUB_REPO_NAME=devdatasorter-backup

# Автоматическое создание коммитов
GITHUB_AUTO_COMMIT=true
# Интервал синхронизации с GitHub в часах
GITHUB_SYNC_INTERVAL=6