name: Deploy to Oracle Cloud

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Login to Docker Hub
      uses: docker/login-action@v3
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}

    - name: Build and push Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        push: true
        tags: ${{ secrets.DOCKER_USERNAME }}/devdatasorter:latest
        cache-from: type=gha
        cache-to: type=gha,mode=max

    - name: Deploy to Oracle Cloud
      uses: appleboy/ssh-action@v1.0.0
      with:
        host: ${{ secrets.ORACLE_HOST }}
        username: ${{ secrets.ORACLE_USERNAME }}
        key: ${{ secrets.ORACLE_SSH_KEY }}
        script: |
          # Остановить и удалить старый контейнер
          docker stop devdatasorter-bot || true
          docker rm devdatasorter-bot || true
          
          # Загрузить новый образ
          docker pull ${{ secrets.DOCKER_USERNAME }}/devdatasorter:latest
          
          # Запустить новый контейнер
          docker run -d \
            --name devdatasorter-bot \
            --restart unless-stopped \
            -e TELEGRAM_BOT_TOKEN="${{ secrets.TELEGRAM_BOT_TOKEN }}" \
            -e OPENAI_API_KEY="${{ secrets.OPENAI_API_KEY }}" \
            -e OLLAMA_BASE_URL="${{ secrets.OLLAMA_BASE_URL }}" \
            -e ADMIN_USER_ID="${{ secrets.ADMIN_USER_ID }}" \
            -v /home/ubuntu/devdatasorter/cache:/app/src/utils/cache \
            -v /home/ubuntu/devdatasorter/logs:/app/logs \
            -p 8000:8000 \
            ${{ secrets.DOCKER_USERNAME }}/devdatasorter:latest
          
          # Очистить неиспользуемые образы
          docker image prune -f